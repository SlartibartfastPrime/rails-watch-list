<div class="container">
  <div>
    <h1><%= @list.name %></h1>
  </div>
  <div>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
    <%= link_to 'Go back to lists', lists_path %>
  </div>
  <div class="row">
    <% @bookmarks.each do |bookmark|%>
    <div class="col card" style="width: 18rem;">
      <div class="card-body">
        <%= image_tag bookmark.movie.poster_url, :class=> "card-img-top" %>
        <h2 class="card-title"><%= bookmark.movie.title %></h2>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="card-text">Rating: <%= bookmark.movie.rating %>/10</p>
        <%= link_to 'Delete this movie', bookmark_path(bookmark), method: :delete %>
      </div>
    </div>
    <% end %>
  </div>
</div>
