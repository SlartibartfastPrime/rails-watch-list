<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <h1><%= @list.name %></h1>
    <p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %></p>
  </div>
  <div class="row">
    <% @bookmarks.each do |bookmark|%>
    <div class="card col-3 p-3 m-4" style="width: 18rem;">
      <div class="card-body">
        <%= image_tag bookmark.movie.poster_url, :class=> "card-img-top" %>
        <h2 class="card-title pt-2"><%= bookmark.movie.title %></h2>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <p class="card-text">Rating: <%= bookmark.movie.rating %>/10</p>
        <%= link_to 'Delete this movie', bookmark_path(bookmark), method: :delete, class: "btn btn-warning" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
